<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="Toolbar">
        <item name="android:background">@color/new_color_buttom</item>
        <item name="background">@color/new_color_buttom</item>
        <item name="android:gravity">start</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#000</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="SpecialEditText" >
        <item name="android:background">@drawable/special_edit_text</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@color/special_edit_text__text_color</item>
        <item name="android:textColorHint">@color/special_edit_text__hint_color</item>
    </style>

    <style name="TextToTranslate" >
        <item name="android:background">@drawable/special_edit_text</item>
        <item name="android:textColor">@color/special_edit_text__text_color</item>
        <item name="android:textColorHint">@color/special_edit_text__hint_color</item>
    </style>

    <style name="AccentButton">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/accent_button</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AccentText">

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/new_color_back</item>
    </style>

    <style name="BlueText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_lense</item>
    </style>

    <style name="ExerciseButtonLocked">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Main_TextMarginTop">
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="ExerciseCheckButton">
        <item name="android:background">@color/color_primary_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme_Dialog_Translucent" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
